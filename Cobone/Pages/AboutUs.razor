@page "/aboutus"
@inject IInformationDataService InformationDataService



@if (PageInfo is not null)
{
    <MudGrid Justify="Justify.Center">
        <MudItem xs="12" sm="12">
            
            <MudCard>
                <MudCardHeader>
                    <MudText Typo="Typo.h1" 
                    Style="font-size: 36px; margin-bottom: 18px; font-family:Helvetica Neue, Helvetica, Arial, sans-serif; color: rgba(102, 102, 102, 1)">About Us</MudText>
                </MudCardHeader>
                <MudCardContent>
                    @((MarkupString)(MarkupStringSanitized)HttpUtility.HtmlDecode(PageInfo.description))
                </MudCardContent>
            </MudCard>
        </MudItem>
    </MudGrid>
}

@code{
    public InformationDetails? PageInfo { get; set; } = null;
    protected override async Task OnInitializedAsync()
    {
        if(InformationDataService is not null){
            var infos = await InformationDataService.GetSiteInformation();
            var pageInfo = infos.FirstOrDefault(i => i.title.Contains("about us", StringComparison.OrdinalIgnoreCase));

            if(pageInfo is not null){
                PageInfo = await InformationDataService.GetInformationDetails(pageInfo.id);

            }
            
        }
    }
}