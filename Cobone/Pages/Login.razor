@page "/login"
@inject IStringLocalizer<Resource> Loc

<EditForm Model="@model" OnValidSubmit="OnValidSubmit">
    <DataAnnotationsValidator />
    <MudGrid Justify="Justify.Center">
        <MudItem xs="12" sm="7">
            <MudCard>
                <MudCardHeader>
                    <MudText Typo="Typo.h5">@Loc["login-login"]</MudText>
                </MudCardHeader>
                <MudCardContent>
                    <MudStack>
                        <MudTextField Label="@Loc["login-email"]" Class="mt-3" Variant="Variant.Outlined"
                                      @bind-Value="model.Email" For="@(() => model.Email)" />
                        <MudTextField Label="@Loc["login-password"]" HelperText="@Loc["login-helper"]" Class="mt-3" Variant="Variant.Outlined"
                                  @bind-Value="model.Password" For="@(() => model.Password)" InputType="InputType.Password" />
                        <MudLink Href="/forgotpassword">@Loc["login-forgot"]</MudLink>
                        <MudLink Href="/registration">@Loc["login-register"]</MudLink>
                    </MudStack>
                </MudCardContent>
                <MudCardActions>
                    <MudButton ButtonType="ButtonType.Submit" Variant="Variant.Filled" Size="Size.Large" FullWidth="true" Color="Color.Primary" Class="ml-auto">@Loc["login-login"]</MudButton>
                </MudCardActions>
            </MudCard>
        </MudItem>
    </MudGrid>
</EditForm>