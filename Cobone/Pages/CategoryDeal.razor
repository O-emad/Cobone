@page "/category/{CategoryId}"
@using System.Net

<MudPaper Elevation="0" Class="pa-3 ma-0"  Style="@($"background:{Colors.Grey.Lighten4}; border-radius:5px;")">
    <MudChip Class="ma-3 pa-3 py-5"  Color="Color.Dark">
        <MudText Typo="Typo.h5" Style="font-weight:bold;">@(WebUtility.HtmlDecode(CategoryName))</MudText>
    </MudChip>
<MudGrid Justify="Justify.Center" Spacing="1" Class="pa-3" >
    <MudItem xs="12" xxl="12">

        @if (Products is not null && Products.Count>0)
            {
                <MudGrid Class="" Spacing="2" Justify="Justify.FlexStart">
                @foreach (var item in Products)
                {
                    @*<ProductCard xs="12" sm="6" md="6" lg="4" xl="3" xxl="3" Product="item" Class="d-flex flex-1"></ProductCard>*@
                    <ProductPaper Product="item"></ProductPaper>
                }
               
        </MudGrid>
        }

</MudItem>
</MudGrid>
</MudPaper>
