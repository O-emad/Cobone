@page "/registration"
@inject IStringLocalizer<Resource>  Loc

<EditForm Model="@model" OnValidSubmit="OnValidSubmit">
    <DataAnnotationsValidator />
    <MudGrid Justify="Justify.Center">
        <MudItem xs="12" sm="7">
            <MudCard>
                <MudCardHeader>
                    <MudText Typo="Typo.h5">@Loc["register-register"]</MudText>
                </MudCardHeader>
                <MudCardContent>
                    <MudTextField Label="@Loc["register-first-name"]" Variant="Variant.Outlined"
                                  @bind-Value="model.Firstname" For="@(() => model.Firstname)" />
                    <MudTextField Label="@Loc["register-last-name"]" Variant="Variant.Outlined"
                                  @bind-Value="model.Lastname" For="@(() => model.Lastname)" />
                    <MudTextField Label="@Loc["register-email"]" Class="mt-3" Variant="Variant.Outlined"
                                  @bind-Value="model.Email" For="@(() => model.Email)" />
                    <MudTextField Label="@Loc["register-password"]" HelperText="@Loc["register-password-helper"]" Class="mt-3" Variant="Variant.Outlined"
                                  @bind-Value="model.Password" For="@(() => model.Password)" InputType="InputType.Password" />
                    <MudTextField Label="@Loc["register-confirm-password"]" HelperText="@Loc["register-confirm-password-helper"]" Class="mt-3" Variant="Variant.Outlined"
                                  @bind-Value="model.Confirm" For="@(() => model.Confirm)" InputType="InputType.Password" />
                    <MudTextField Label="@Loc["register-phone"]" HelperText="@Loc["register-phone-helper"]" Class="mt-3" Variant="Variant.Outlined"
                                  @bind-Value="model.Telephone" For="@(() => model.Telephone)" InputType="InputType.Telephone" />
                </MudCardContent>
                <MudCardActions>
                    <MudButton ButtonType="ButtonType.Submit" Variant="Variant.Filled" Color="Color.Primary" Size="Size.Large"
                               FullWidth="true" Class="ml-auto">@Loc["register-register"]</MudButton>
                </MudCardActions>
            </MudCard>
        </MudItem>
    </MudGrid>
</EditForm>