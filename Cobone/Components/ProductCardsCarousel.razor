@using Cobone.Models



<MudCarousel SelectedIndex="SelectedIndex" id="cardsgrid-carousel" Class="product-cards-carousel" ShowArrows="true" AutoCycle="false" ShowDelimiters="false" TData="object">

    @if (Grids.Count > 0)
    {
        foreach(var grid in Grids)
        {
            <MudCarouselItem Class="product-cards-carousel-item">
                <MudGrid Spacing="2" Justify="Justify.Center">
                    @foreach(var item in grid)
                    {
                    <ProductCard xs="Xs" sm="Sm" md="Md" lg="Lg" xl="Xl"  xxl="Xxl" Product="item"></ProductCard>
                    }
                </MudGrid>
            </MudCarouselItem>
        }
    }
</MudCarousel>
