@using Cobone.Models



<MudCarousel SelectedIndex="SelectedIndex" id="cardsgrid-carousel" Class="product-cards-carousel pa-0 ma-0" ShowArrows="true" 
AutoCycle="false" ShowDelimiters="false" TData="object">

    @if (Grids.Count > 0)
    {
        foreach(var grid in Grids)
        {
            <MudCarouselItem Class="product-cards-carousel-item pa-2">
                <MudGrid Spacing="2" Justify="Justify.Center" Class="">
                    @foreach(var item in grid)
                    {
                        @*<ProductCard xs="12" sm="12" md="6" lg="4" xl="3" xxl="3" Product="item" Class="d-flex"></ProductCard>*@
                        <ProductPaper Product="item"></ProductPaper>
                    }
                </MudGrid>
            </MudCarouselItem>
        }
    }
</MudCarousel>
