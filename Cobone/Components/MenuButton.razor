


<MudButton @onmouseenter="OnMouseEnter" @onmouseleave="OnMouseLeave" Style="@Style">Button</MudButton>
<MudPopover  @bind-Open="PopoverOpen" Direction="Direction.Bottom" AnchorOrigin="Origin.BottomLeft" RelativeWidth="true">
    <MudGrid Class="ma-2" Spacing="2" Justify="Justify.Center">

            @ProductPreview

            @SubCategories
        

        @*        <ProductCard xs="7" sm="6" md="5" lg ="4" xl="3"></ProductCard>
        <MudItem xs="5" sm="6" md="7" lg="8" xl="9"></MudItem>*@
    </MudGrid>
</MudPopover>


@code{

    [Parameter] public RenderFragment ProductPreview{ get; set; }
    [Parameter] public RenderFragment SubCategories{ get; set; }
    [Parameter] public string Style{ get; set; }
    public bool PopoverOpen { get; set; }

    private void OnMouseEnter()
    {
        PopoverOpen = true;
    }
    private void OnMouseLeave()
    {
        PopoverOpen = false;
    }
}