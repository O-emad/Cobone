

<MudButton  OnClick="DoAction" Variant="Variant.Filled" @onfocusout="DO2"  
            Class="mud-nav-group px-5 my-2" Style="text-align:left;" Color="@ButtonColor">
    <MudText Color="Color.Tertiary">@NavLinkLabel</MudText>
</MudButton>



@code{
    [Parameter] public Action<Category> OnClick { get; set; }
    [Parameter] public string NavLinkLabel { get; set; }
    [Parameter] public Category Category { get; set; }
    public Color ButtonColor { get; set; } = Color.Dark;


    public void DoAction()
    {
        ButtonColor = Color.Primary;
        OnClick(Category);
    }

    public void DO2(){
        ButtonColor = Color.Dark ;
    }


    
}