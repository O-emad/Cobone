@inherits LayoutComponentBase
<MudThemeProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudGrid Justify="Justify.Center" Spacing="1">
        <MudItem sm="10" xs="10" Style="margin-top:15px;">
            <TopAddCarousel />
        </MudItem>



        <MudItem sm="12" xs="12" Style="padding:0">
            <MudDivider Style="background-color:#000; opacity:0.125" />
        </MudItem>

        <MudItem sm="10" xs="10" Style="padding:0">
            <MudAppBar Fixed="false" Color="Color.Transparent" Elevation="0">

                <MudText Typo="Typo.h5" Class="ml-3">Application</MudText>
                <MudSpacer />
                <MudIconButton Icon="@Icons.Material.Filled.MoreVert" Color="Color.Inherit" Edge="Edge.End" />
            </MudAppBar>

        </MudItem>
        <MudItem sm="12" xs="12" Style="padding:0">
            <MudDivider Style="background-color:#000; opacity:0.125; height:2px" />
        </MudItem>
        <MudItem sm="10" xs="10">
            <MudAppBar Fixed="false" Elevation="0">

                <MudMenu Size="Size.Large" ActivationEvent="@MouseEvent.MouseOver" AnchorOrigin="Origin.BottomCenter" TransformOrigin="Origin.TopCenter">
                    <ActivatorContent>
                        <MudButton Variant="Variant.Filled" Color="Color.Primary" Style="white-space:pre-line; text-align:center">
                            <MudIcon Icon="@Icons.Material.Filled.Favorite" />
                            I am a button
                        </MudButton>
                    </ActivatorContent>

                    <ChildContent>
                        <MudMenuItem>Profile</MudMenuItem>
                        <MudMenuItem>Theme</MudMenuItem>
                        <MudMenuItem>Usage</MudMenuItem>
                        <MudMenuItem>Sign Out</MudMenuItem>
                    </ChildContent>
                </MudMenu>

            </MudAppBar>
        </MudItem>

    </MudGrid>


    <MudMainContent MaxWidth="MaxWidth.Medium">
        <MudContainer MaxWidth="MaxWidth.False">
            @Body
        </MudContainer>
        <MudScrollToTop>
            <MudFab Color="Color.Primary" IconSize="Size.Large" Icon="@Icons.Filled.ArrowCircleUp" />
        </MudScrollToTop>
    </MudMainContent>
</MudLayout>
